<Window x:Class="dboEF6.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:dboEF6"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <DataGrid IsReadOnly="True"  AutoGenerateColumns="True"  Name="dataGrid" HorizontalAlignment="Left" Height="177" Margin="73,71,0,0" VerticalAlignment="Top" Width="403">
            <DataGrid.RowStyle>
                <Style TargetType="{x:Type DataGridRow}">
                    <EventSetter Event="MouseDoubleClick" Handler="RowDoubleClick"/>
                </Style>
            </DataGrid.RowStyle>
        </DataGrid>
        <Button Click="button_Click" Name="button" Content="Button" HorizontalAlignment="Left" Height="48" Margin="419,310,0,0" VerticalAlignment="Top" Width="154"/>
        <ComboBox Name="comboBox" HorizontalAlignment="Left" Height="35" Margin="573,71,0,0" VerticalAlignment="Top" Width="181"/>

    </Grid>
</Window>
